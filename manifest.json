{
  "manifest_version": 3,
  "name": "Paramount+ Quality Controller",
  "version": "1.0",
  "description": " Inspects and displays real-time streaming quality (resolution, bitrate) on Paramount+.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.paramountplus.com/*",
    "*://*.paramount.tech/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.paramountplus.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injected/index.js",
        "injected/constants.js",
        "injected/config.js",
        "injected/manifest-parser.js",
        "injected/network-hooks.js",
        "injected/rewriter.js",
        "injected/state.js",
        "injected/url-analysis.js",
        "injected/url-utils.js"
      ],
      "matches": [
        "*://*.paramountplus.com/*"
      ]
    }
  ]
}